{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["../src/app/*"],
      "@ui/*": ["../src/ui/*"],
      "@features/*": ["../src/features/*"],
      "@integrations/*": ["../src/integrations/*"],
      "@services/*": ["../src/services/*"],
      "@types/*": ["../src/types/*"],
      "@schemas/*": ["../src/schemas/*"],
      "@test-utils/*": ["../src/test-utils/*"]
    },
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "../**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../tests"
  ]
}
